<% comment.replies.each do |reply| %>
  <% if reply.persisted? %>
    <div class="pl5">
      <%= render 'row', row: reply %>
      <% if local_assigns[:recursive].present? && local_assigns[:recursive] == true %>
        <div class="pl5">
          <%= render 'replies', comment: reply, recursive: true %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
