<h1 class="is-size-1 pb20">
  <%= link_to 'Closure table index', comments_path %>
</h1>

<div class="comments_container">
  <h2 class="is-size-2">コメント</h2>
  <section>
    <h3 class="is-size-3">コメント一覧</h3>
    <div>
      <%= render 'row', row: @comment %>
    </div>

    <%= render 'replies', comment: @comment, recursive: true %>
    <div class="pb10">
      <%= render 'reply_form',
        comment: @comment,
        reply: @comment.replies.last,
        url: reply_comment_path(@comment),
        focus: true
      %>
    </div>
  </section>
</div>
